.main{
  margin-top: 5px;
  font-size: 25px;
  color: #7bbfea;
  align-self: center;
  display: flex; /*设置显示样式**/

align-items: center; /**子view垂直居中*/

vertical-align: center; /**垂直居中*/

justify-content: center; /**内容居中*/

flex-direction: row;
}
.title{
  font-size: 25px;
  color: black;
  text-shadow:1px 1px 1px #cccccc;
  align-self: center;
}
.list{
  margin-top:10px;
}

.list .list_item{
  margin-top:10px;
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}

.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
  width:100%;
  height:100%;
  box-shadow: 0px 0px 1px black;
}

.list .list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 20px;
}

.list .list_item .info .price{
  color:#FF2727;
  margin-left:120px;
  margin-top:-25px;
  font-size:17px;
  
}
.list .list_item .info .add{
  margin-left:160px;
  margin-top:0px;
  width: 27px;
  height: 27px;
  float: right;
}
.list .list_item .info .minus{
  margin-left:150px;
  float: left;
  margin-top: -27px;
  width: 27px;
  height: 27px;
}


.blank{
  height: 30px;
}

.list .list_item .info .edit{
  margin-right:70px;
  margin-top:20px;
  float: left;
  height: 35px;
  width: 80px;
  border-radius: 20%;
  color: white;
  font-size: 15px;
  background: #fff;
  color: #7bbfea;
  display:flex; 
  justify-content:center; 
  align-items:center;
  border: 1px solid #7bbfea;
}
.list .list_item .info .delete{
  margin-top:-35px;
  margin-right:40px;
  float: right;
  height: 35px;
  width: 80px;
  background-color: rgb(123,191,234);
  border-radius: 20%;
  color: white;
  font-size: 15px;
  background: #fff;
  color: #7bbfea;
  display:flex; 
  justify-content:center; 
  align-items:center;
  border: 1px solid #7bbfea;
}
.btn{
  background: #fff;
  color: #7bbfea;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 200rpx;
  height: 50rpx;
  display:flex; 
  justify-content:center; 
  align-items:center;
  border: 1px solid #7bbfea;
}