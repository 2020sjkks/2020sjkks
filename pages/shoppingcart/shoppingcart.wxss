
.shoopingcart_title{
  font-size: 25px;
  color: black;
  text-shadow:1px 1px 1px #cccccc;
  margin-left: 10px;
}
.divideline{
  margin-top: 10px;
}
.list{
  margin-top:10px;
}

.list .list_item{
  margin-top:10px;
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}

.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
  width:100%;
  height:100%;
}

.list .list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 20px;
}
.list .list_item .info .selected{
  color:#333;
  margin-left:130px;
  margin-top: 0px;
  font-size: 15px;
}
.list .list_item .info .price{
  color:#FF2727;
  margin-left:10px;
  margin-top:10px;
  font-size:15px;
}

.pay{
  background-color: rgb(123,191,234);
  width: 10px;
  color: white;
}
.list_item .edit{
  color: rgb(123,191,234);
}