.orderinfo_title{
  font-size: 25px;
  color: black;
  text-shadow:1px 1px 1px #cccccc;
  margin-left: 30px;
}
.divideline{
  margin-top: 10px;
}
.list{
  margin-top:10px;
}

.list .list_item{
  margin-top:10px;
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}

.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
  width:100%;
  height:100%;
}

.list .list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 20px;
}
.list .list_item .info .comment{
  margin-right:10px;
  margin-top:0px;
  float: right;
  height: 35px;
  width: 80px;
  background-color: rgb(123,191,234);
  border-radius: 20%;
  color: white;
  box-shadow: 0 0 3px #000000;
  font-size: 15px;
}

.list .list_item .info .selected{
  color:#333;
  margin-left:15px;
  margin-top: 30px;
  font-size: 15px;
}
.list .list_item .info .price{
  color:#FF2727;
  margin-left:10px;
  margin-top:5px;
  font-size:15px;
  float: left;
}
.list_item{
  margin-top:10px;
  padding:10px;
  height:80px;
  border-bottom:1px solid #E8E8E8;
}
.totalprice{
  font-size: 20px;
  height: 20px;
  color: rgb(233, 95, 95);
}
.list_item .accepted{
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-top: -200rpx;
  margin-left: 530rpx;
  position: absolute
}