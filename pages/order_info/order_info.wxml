<!--pages/order_info/order_info.wxml-->
<text class="orderinfo_title">订单详情</text>
<view class="list_item">
  <view>
    <text class='t'>订单号：{{oid}}</text>
  </view>
  <view>
    <text class='t'>订单时间：{{goods[0][4]}}</text>
  </view>
  <image class='accepted' wx:if='{{accepted==2}}' src='/imgs/finish.png'></image>
  <image class='accepted' wx:if='{{accepted!=2}}' src='/imgs/unfinish.png'></image>
  <view>
    <text class='t'>手机号码：{{phone}}</text>
  </view>
  <view>
    <text class='t'>配送地址：{{address}}</text>
  </view>
  <view>
    <text class='t'>配送员电话：{{courier_phone}}</text>
  </view>
</view>
<view class='divideline' ></view>
<view class='list'>
  <block  wx:for="{{goods}}" wx:key="index">
  <view class='list_item'>
    <view class='img'>
      <image src="http://brucemarkdown.top:5000/image/{{item[1]}}.jpg" ></image>
    </view>
    <view class='info'>
      <view class='title' data-index="{{index}}" >{{item[0]}}</view> 
      <view class="price">￥{{item[2]}}</view>
      <button class="notcomment" wx:if='{{accepted!=2 && business!=1}}' bindtap="cannot_comment">评价</button> 
      <button class="comment" wx:if='{{accepted==2 && business!=1}}' data-index="{{index}}" bindtap="goto_comment">评价</button> 
      <view class='selected' >x {{item[3]}} 份</view> 
    </view>
  </view>
  </block>
</view> 
<view class="divideline"></view>
<text class="totalprice">已支付：{{totalprice}}元</text>
<view class='divideline' ></view>

