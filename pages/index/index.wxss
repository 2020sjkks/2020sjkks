page{
  background: #F6F6F6;
}
.box-sv{
  width: 700rpx;padding: 30rpx 0;height: 399rpx;white-space:nowrap;margin:3% auto
}
.box-sv image{
  width: 600rpx;height: 399rpx;margin-right: 20rpx;border-radius: 5px;
}

.list{
  margin-top:10px;
  background: #fff;
  width: 95%;
  position: relative;
  margin: 10px 10px 10px 10px;
}

.list .list_item{
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}

.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
  width:100%;
  height:100%;
}

.list .list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  margin-top:-4px;
  font-size: 20px;
}
.list .list_item .info .price{
  color:#FF2727;
  margin-left:10px;
  margin-top:7px;
  font-size:20px;
}
.list .list_item .info .sales{
  color:#333;
  margin-left:10px;
  margin-top:7px;
  font-size:14px;
}
.list .list_item .info .selected{
  color:#333;
  margin-left:120px;
  margin-top: -80px;
  font-size: 15px;
}
.list .list_item .info .add{
  margin-top:-40px;
  margin-right: 20px;
  width: 27px;
  height: 27px;
  float: right;
}
.list .list_item .info .minus{
  margin-left:110px;
  float: left;
  margin-top: -40px;
  width: 27px;
  height: 27px;
}


.bottomview{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 45px;
}
.bottomview .cart{
  height: 40px;
  width: 90px;
  left: 130px;
  background-color: rgb(123,191,234);
  border-radius: 20%;
  color: white;
  box-shadow: 0 0 3px #333;
}
.blank{
  height: 80px;
}