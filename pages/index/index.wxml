<scroll-view class='box-sv' scroll-x >
<image wx:for="{{goods}}" wx:key="{{index}}" src='http://brucemarkdown.top:5000/image/{{item[2]}}.jpg' bindtap='img' mode="aspectFill" data-url='http://brucemarkdown.top:5000/image/{{item[2]}}.jpg'></image>
</scroll-view>
<view>菜品列表</view>
<view class='list'>
  <block  wx:for="{{goods}}" wx:key="index">
  <view class='list_item'>
    <view class='img'>
      <image src="http://brucemarkdown.top:5000/image/{{item[2]}}.jpg" data-index="{{index}}" bindtap="get_good_info" ></image>
    </view>
    <view class='info'>
      <view class='title' data-index="{{index}}" bindtap="get_good_info">{{item[1]}}</view> 
      <view class="price">￥{{item[3]}}</view>
      <view class="sales">销量:{{sales[index]}}</view>
      <image class="add" src="/imgs/add.png" data-index="{{item[0]}}" bindtap="add_good"></image>
      <image class="minus" src="/imgs/minus.png" data-index="{{item[0]}}" bindtap="minus_good"></image>
      <view class='selected' >已选 {{shopping_cart[item[0]]}} 份</view> 
    </view>
  </view>
  </block>
</view> 
<view class='bottomview'>
  <button class="cart" bindtap="goto_shooping_cart"> 下单 </button>
</view>
<view class="blank"></view>
